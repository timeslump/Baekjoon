#include<iostream>
#include<cstdlib>

using namespace std;
int main() {
    int N;
    cin >> N;
    int cnt = 0;
    int x = 1;
    string s;
    while(x++){
        s = to_string(x);
        if(s.find("666") != -1)
            cnt++;
        if(cnt == N)
            break;
    }

    cout << x << endl;
}
