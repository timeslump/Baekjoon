#include <bits/stdc++.h>

using namespace std;
#define endl "\n"


int main() {
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    string s;
    cin >> s;
    int ans = 1;
    for(int i = 1; i < s.size(); i++){
        if(s[i] <= s[i - 1])
            ans++;
    }
    cout << ans;
}
